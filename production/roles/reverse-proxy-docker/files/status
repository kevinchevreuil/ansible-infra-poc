server {
        listen 80;
	server_name status.exo-industries.xyz;

        location / {
		return 301 https://status.exo-industries.xyz;
	}
}

server {
	listen 443 ssl http2;
	server_name status.exo-industries.xyz;

	ssl_certificate /etc/ssl/certs/status.exo-industries.xyz.crt;
	ssl_certificate_key /etc/ssl/private/status.exo-industries.xyz.key;

	location / {
        proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Accept-Encoding "";
	proxy_pass http://127.0.0.1:3001;
	}
}
